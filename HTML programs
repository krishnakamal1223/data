CONFIRM PASS WITH SPAN

<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
<script type="text/javascript">
function validatedetails(){
	var uname=document.forms[0].elements[0].value;
	var pwd=document.forms[0].elements[1].value;
	var cpwd=document.forms[0].elements[2].value;
	var errUserName=document.getElementById("errUserName")
	var errPassword = document.getElementById("errPassword")
	var errConfirmPassword = document.getElementById("errConfirmPassword")
	if(uname.length == 0){
		errusername.innerHTML="<font color='red'>please enter username</font>"
		return false;
	}
	else if(pwd.length == 0){
		//alert("please enter your password")
		errpassword.innerHTML = "<font color='red'>please enter password</font>"
	}
	else if(pwd != cpwd){
		//alert(("password doesnt match"))
		errconfirm.sassword.innerHTML = "<font color='red'>Password and confirm password does not match</font>"
	}
	else if(pwd.length < 6 && pwd.length > 12){
		//alert("password should be 6-12 characters")
		errpassword.innerHTML = "<font color ='red'>Password should be between 6-12 characters</font>"
	}
	else
		{
		alert("welcome :"+uname)
		}
}
	</script>
</head>
<body>
<body>
 <form action="result.html" name="myform" onsubmit="return validatedetails()">
 <!-- This is a comment in HTML -->
  <table cellspacing="10" cellpadding="10">
   <h1>Login form</h1>
   <tr> <td>Username :</td>
    <td><input type="text" name="username" id="username"></td>
    <td><span id="errusername"></span></td>
   </tr>
   <tr>
    <td>Password :</td>
    <td><input type="password" name="password" id="password"></td>
    <td><span id="errpassword"></span>
   </tr>
   <tr>
    <td>Confirm Password :</td>
    <td><input type="password" name="confirmpassword" id="confirmpassword"></td>
    <td><span id="errconfirmpassword"></span>
   </tr>
   <tr>
    <td>
    <input type="submit" value="Login1">
    </td>
    <td><input type="reset" value="Clear"></td>
   </tr>
  </table>
 </form>

</body>
</html>

